# Set the default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized
*.js text
*.ts text
*.json text
*.kt text
*.gradle text
*.tsx text

# Declare files that will always have LF line endings on checkout
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Declare files that will always have CRLF line endings on checkout
*.bat text eol=crlf
*.cmd text eol=crlf
